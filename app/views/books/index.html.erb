<% flash.each do |type, msg| %>
    <div class='flash'>
        <p>
            <%= msg %>
        </p>
    </div>
<%end%>
<h1>Home</h1>

<% if @books.length() != 0 %>
    <table style="margin-top:10px;">
        <tr>
            <th>Title</th>
            <th colspan="2">Actions</th>
        </tr>
        <% @books.each do |book| %>
            <tr>
                <td><%= link_to book.title,
                    book_path(book.id)
                    %>
                </td>
                <td>
                    <%= button_to "Edit",
                        edit_book_path(book.id),
                        :method => :get
                    %>
                </td>
                <td>
                    <%= button_to "Delete",
                        book_path(book.id),
                        :method => :delete
                    %>
                </td>
            </tr>
        <%end%>
        <tr>
            <td style="text-align: center" >
                <%= button_to "Add",
                    new_book_path,
                    :method => :get
                %>
            </td>
        </tr>
    </table>
<% else %>
    <p>Use the button below to add books to the collection.</p>
    <%= button_to "Add",
        new_book_path,
        :method => :get
    %>
<% end %>

